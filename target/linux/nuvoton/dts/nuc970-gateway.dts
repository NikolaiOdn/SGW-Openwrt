/dts-v1/;
/include/ "nuc970.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "Nuvoton NUC970 GateWay Version: 0.1";
	compatible = "nuvoton,nuc970-dev-v1.0", "nuvoton,nuc970";

	chosen {
		bootargs = "root=/dev/ram0 console=ttyS0,115200n8 rdinit=/sbin/init mem=64M lpj=744448";
	};
 
	gpio-keys-polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <50>;
		status = "okay";
		reset {
			label = "reset";
			gpios = <&gpio 2 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	sx127x-gpio {
		sx127x_reset-gpios = <&gpio 45 GPIO_ACTIVE_LOW>;
		sx127x_int-gpios   = <&gpio 40 GPIO_ACTIVE_LOW>;
	};

	gpio-leds {
		compatible = "gpio-leds";
		status = "okay";
		power {
			label = "nuc970:green:power";
			gpios = <&gpio 32 GPIO_ACTIVE_LOW>;
		};
/*
		lan {
			label = "nuc970:green:lan";
			gpios = <&gpio 33 GPIO_ACTIVE_LOW>;
		};
		wan {
			label = "nuc970:green:wan";
			gpios = <&gpio 34 GPIO_ACTIVE_LOW>;
		};
*/


	};



	apb {
		uart1: serial@b0071000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart1_PA>;
			pdma-enable = <1>;
			status = "okay";
		};

		uart2: serial@b0072000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart2_PG>;
			pdma-enable = <1>;
			status = "okay";
		};

		uart3: serial@b0073000 {
			status = "disabled";
		};

		uart4: serial@b0074000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart4_PD>;
			pdma-enable = <1>;
			status = "disabled";
		};

		uart5: serial@b0075000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart5_PG>;
			pdma-enable = <1>;
			status = "disabled";
		};

		uart6: serial@b0076000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart6_PD>;
			pdma-enable = <1>;
			status = "disabled";
		};

		uart7: serial@b0077000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart7_PB>;
			pdma-enable = <1>;
			status = "disabled";
		};

		uart8: serial@b0078000 {
			status = "disabled";
		};

		uart9: serial@b0079000 {
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_uart9_PB_PE>;
			pdma-enable = <1>;
			status = "disabled";
		};

		can0: can@b00a0000 {
			status = "disabled";
		};

		can1: can@b00a1000 {
			status = "disabled";
		};

		rtc: rtc@b0041000 {
			status = "disabled";
		};

		nadc: nadc@b0043000 {
			status = "disabled";
		};

		pwm0: pwm0@b0058000 {
			status = "disabled";
		};

		pwm1: pwm1@b0059000 {
			status = "disabled";
		};


		qspi0: qspi0@b0060000 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			num_cs  = <2>;
			lsb	 = <0>;
			txneg   = <1>;
			rxneg   = <0>;
			clkpol  = <0>;
			divider = <4>;
			sleep   = <0>;
			txnum   = <0>;
			txbitlen = <8>;
			bus_num	= <0>;

			flash: mt29f@0 {
				compatible = "mt29f";
				#address-cells = <1>;
				#size-cells = <1>;
				reg = <0>;

				spi-max-frequency = <100000000>;

				partition@0 {
					label = "u-boot";
					reg = <0x00000000 0x0200000>;
					read-only;
				};
				partition@200000 {
					label = "kernel";
					reg = <0x0200000 0x1400000>;
				};
				partition@1600000 {
					label = "ubi";
					reg = <0x1600000 0x6A00000>;
				};
			};
		};
		/*
		spi0: spi0@b0061000 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			num_cs  = <2>;
			lsb	 = <0>;
			txneg   = <1>;
			rxneg   = <0>;
			clkpol  = <0>;
			divider = <4>;
			sleep   = <0>;
			txnum   = <0>;
			txbitlen = <8>;
			bus_num	= <1>;

			spidev@0x01 {
				compatible = "rohm,dh2228fv";
				spi-max-frequency = <30000000>;
				reg = <0>;
			};
		};
		*/
		spi0: spi0@b0061000 {

			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			num_cs  = <2>;
			lsb	 = <0>;
			txneg   = <1>;
			rxneg   = <0>;
			clkpol  = <0>;
			divider = <4>;
			sleep   = <0>;
			txnum   = <0>;
			txbitlen = <8>;
			bus_num	= <1>;

			ili9341@0 {
				compatible = "ilitek,ili9341";
				reg = <0>;
				spi-max-frequency = <100000000>;
				rotate = <90>;
				bgr;
				fps = <30>;
				buswidth = <8>;
				reset-gpios = <&gpio 108 GPIO_ACTIVE_LOW>;
				dc-gpios = <&gpio 109 GPIO_ACTIVE_LOW>;
				debug = <1>;
			};
		};
		spi1: spi1@b0062000 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			num_cs  = <2>;
			lsb	 = <0>;
			txneg   = <1>;
			rxneg   = <0>;
			clkpol  = <0>;
			divider = <4>;
			sleep   = <0>;
			txnum   = <0>;
			txbitlen = <8>;
			bus_num	= <2>;

			spidev@0x01 {
				compatible = "rohm,dh2228fv";
				spi-max-frequency = <30000000>;
				reg = <0>;
			};
			spidev@0x02 {
				compatible = "rohm,dh2228fv";
				spi-max-frequency = <30000000>;
				reg = <1>;
			};

		};

		etimer0: etimer0@b0050000 {
			status = "disabled";
		};

		etimer1: etimer1@b0050100 {
			status = "disabled";
		};

		etimer2: etimer2@b0051000 {
			status = "disabled";
		};

		etimer3: etimer3@b0051100 {
			status = "disabled";
		};

		i2c0: i2c0@b0080000 {
			status = "disabled";

			nau8822: nau8822@1a {
				compatible = "nuvoton,nau8822";
				reg = <0x1a> ;
			};
		};

		i2c1: i2c1@b0081000 {
			status = "disabled";
			pinctrl-0 = <&pinctrl_i2c1_PB>;
		};


		i2c2: i2c2@b0082000 {
			status = "disabled";
			pinctrl-0 = <&pinctrl_i2c2_PB>;
		};

		i2c3: i2c3@b0083000 {
			status = "disabled";
			pinctrl-0 = <&pinctrl_i2c3_PB>;
		};

	};

	ahb {

		usbh_ehci@b0015000 {
			status = "okay";
		};
		usbh_ohci@b0017000{
			status = "okay";
		};

		usbdev@b0016000 {
			status = "disabled";
		};

		fmi@b0019000 {
			compatible = "nuvoton,nuc970-fmi", "nand";
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_nand>;
			status = "disabled";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x00000000 0x0200000>;
			};

			partition@1 {
				label = "Kernel";
				reg = <0x0200000 0x1400000>;
			};

			partition@2 {
				label = "rootfs";
				reg = <0x1600000 0x6480000>;
			};
		};

		sdh@b0018000 {
			status = "disabled";
		};

		emac0@b0012000 {
			status = "okay";
		};
		emac1@b0022000 {
			status = "okay";
		};
		cap0@b0024000 {
			status = "disabled";
		};
		cap1@b0014000 {
			status = "disabled";
		};
		dma@b0008000 {
			status = "okay";
		};

		i2s: i2s@b0020000 {
			status = "disabled";
		};

		i2s_pcm: i2s_pcm {
			status = "disabled";
		};

		sound {
			compatible = "nuvoton,nuc970-audio";
			i2s-controller = <&i2s>;
			i2s-platform = <&i2s_pcm>;
			status = "disabled";
		};
		ebi: ebi@b0010000 {
			status = "disabled";
		};
	};
};
